<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.bodybuilding</groupId>
    <artifactId>commerce-hyper-client</artifactId>
    <version>1.100.108-SNAPSHOT</version>

    <packaging>jar</packaging>
    <name>Bodybuilding.com Commerce Hyper Client</name>
    <url>http://confluence/display/commerce/Commerce+Hyper+Client</url>


    <parent>
        <groupId>com.bodybuilding.commerce</groupId>
        <artifactId>core-base</artifactId>
        <version>1.0.3-SNAPSHOT</version>
        <relativePath>../../catalog/core-base</relativePath>
    </parent>



    <dependencies>
        
        <!-- LOGGING DEPENDENCIES  -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.5</version>
        </dependency>
        
        <!-- HTTP PROVIDERS DEPENDENCIES  -->
        <dependency>
            <groupId>com.squareup.okhttp</groupId>
            <artifactId>okhttp</artifactId>
            <version>2.0.0-RC1</version>
        </dependency>
        
        <!--  ENTITY UTILS (@ToString) -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>1.12.6</version>
        </dependency>

        <!-- JSON PARSER -->
        <dependency>
            <groupId>com.fasterxml.jackson.core</groupId>
            <artifactId>jackson-databind</artifactId>
            <version>2.2.3</version>
        </dependency>
    
        <!-- CONVERSION UTILS -->
        <dependency>
            <groupId>commons-beanutils</groupId>
            <artifactId>commons-beanutils</artifactId>
            <version>1.8.3</version>
        </dependency>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-lang3</artifactId>
            <version>3.1</version>
            <type>jar</type>
        </dependency>

        <!-- TESTING BUNDLE -->
        <dependency>
            <groupId>com.bodybuilding.commerce</groupId>
            <artifactId>core-test</artifactId>
            <version>1.0.3-SNAPSHOT</version>
            <scope>test</scope>
        </dependency>
        
        <!-- URI Handler -->
        <dependency>
            <groupId>com.damnhandy</groupId>
            <artifactId>handy-uri-templates</artifactId>
            <version>2.0.1</version>
        </dependency>

    </dependencies>

    <build>
        <plugins>
            <!-- Code coverage for SONAR -->
            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <version>0.7.3-SNAPSHOT</version>
            </plugin>
        </plugins>
    </build>

</project>
